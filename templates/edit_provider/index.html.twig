{% extends 'base.html.twig' %}

{% block title %}Edit provider{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
{% endblock %}
{% block javascripts %}
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}

<div>
    <form>
        <div class="form-group">
            <label>ID</label>
            <input type="text" id="id" class="form-control" value="{{ provider.id }}" readonly>
        </div>
        <div class="form-group">
            <label>Name</label>
            <input type="text" id="name" class="form-control" value="{{ provider.name }}">
        </div>
        <div class="form-group">
            <label>E-mail</label>
            <input type="text" id="email" class="form-control" value="{{ provider.email }}">
        </div>
        <div class="form-group">
            <label>Phone number</label>
            <input type="text" id="phone" class="form-control" value="{{ provider.phone }}">
        </div>
        <div class="form-group">
            <label>Provider type</label>
        </div>
        <div class="form-group">
            <label>Is active</label>
            <select id="isActive">
                <option value="" disabled selected hidden>-</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
        <div class="form-group">
            <label>Creation date</label>
            <input type="text" id="creationDate" class="form-control" value="{{ provider.creationDate | date("d/m/Y", false) }}" disabled>
        </div>
        <div class="form-group">
            <label>Last updated</label>
            <input type="text" id="lastUpdated" class="form-control" value="{{ provider.lastUpdated | date("d/m/Y", false) }}" disabled>
        </div>
        
    </form>
    <a href="{{ path('provider_list') }}">Return</a>
</div>
{% endblock %}
